<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8">
  <title>RestauManager Pro</title>
  <link rel="stylesheet" href="style.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

</head>

<body>
  <script src="https://cdn.socket.io/4.8.1/socket.io.min.js"
    integrity="sha384-mkQ3/7FUtcGyoppY6bz/PORYoGqOl7/aSUMn2ymDOJcapfS6PHqxhRTMh1RR0Q6+"
    crossorigin="anonymous"></script>
  <script>
    const socket = io();

    socket.on('cambioMesa', (data) => {
      console.log('cambioMesa', data);

      const { mesa, estado } = data;

      // Selecciona todas las mesas
      const mesas = document.querySelectorAll('.mesas-grid .mesa');

      mesas.forEach((mesaDiv) => {
        const nombreEl = mesaDiv.querySelector('.mesa-nombre');
        if (nombreEl && nombreEl.textContent.trim() === `Mesa ${mesa}`) {

          // Actualizar texto del estado
          const estadoEl = mesaDiv.querySelector('.mesa-estado');
          if (estadoEl) estadoEl.textContent = estado;

          // Resetear clases y asignar el nuevo estado
          mesaDiv.classList.remove('ocupada', 'libre', 'reservada');
          mesaDiv.classList.add(estado);

          console.log(`Mesa ${mesa} actualizada a ${estado}`);
        }
      });
    });

  </script>

  <header class="header">
    <div class="logo">
      <span class="logo-naranja">RestauManager</span><span class="logo-negro"> Pro</span>
    </div>
  </header>

  <div id="div-sala">
    <div class="sala-header">
      <span class="sala-title">
        <i class="fa-solid fa-camera" style="color: #f48120;"></i> Vista de la Sala
      </span>
      <div class="estado-mesas-panel">
        <div>Estado de las mesas</div>
        <div>
          <span class="leyenda libre"></span> Disponible
          <span class="leyenda ocupada"></span> Ocupada
          <span class="leyenda reservada"></span> Reservada
        </div>
      </div>
    </div>

    <div class="camara-vivo">
      <div class="camara-icono">
        <i class="fa-solid fa-camera"></i>
      </div>
      <div>
        <strong>Vista de Cámara en Vivo</strong>
        <div>Aquí se mostraría la transmisión en tiempo real de la sala</div>
      </div>
    </div>

    <div class="mesas-grid">
      <% let i=0 %>
      <% mesas.forEach((mesa)=> { %>
        <div class="mesa <%= mesa.estado === 'ocupada' ? 'ocupada' : 'libre' %>">
          <div class="mesa-icono"><i class="fa-solid fa-users"></i></div>
          <div class="mesa-nombre">Mesa <%- i+1 %></div>
          <div class="mesa-estado">
            <%= mesa.estado %>
          </div>
        </div>
        <% i++ %>
      <% }) %>
    </div>
  </div>

</body>
<script src="index.js"></script>

</html>